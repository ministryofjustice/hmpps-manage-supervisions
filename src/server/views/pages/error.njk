{% extends "../partials/layout.njk" %}

{% set pageTitle = "Sorry, there is a problem with the service" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class='govuk-heading-xl'>{{ pageTitle }}</h1>

            <p class='govuk-body'>
                Try again later.
            </p>
            <p class='govuk-body'>
                If you continue to see this error contact the {{ applicationName }} support team:
                {{ appEmail(supportEmail) }}.
            </p>

            {% if stack %}
                <h1>{{ message }}</h1>
                <h2>{{ status }}</h2>
                <pre>{{ stack }}</pre>
            {% endif %}
        </div>
    </div>
{% endblock %}
