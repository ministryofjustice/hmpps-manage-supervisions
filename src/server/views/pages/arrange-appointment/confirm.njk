{% extends "../wizard-page.njk" %}
{% set buttonText = 'Finish' %}
{% set buttonQa = 'confirm-appointment/finish-button' %}
{% set title = 'Appointment arranged' %}
{% block page %}
  {% set panelHtml %}
    <strong><span data-qa="confirm-appointment/description">{{ appointment.contactType.description }}</span></strong><br />
    <span data-qa="confirm-appointment/times">
      {{ appointment.appointmentStart | dateWithDayAndWithoutYear() }}
      from
      {{ appointment.appointmentStart | time() }}
    </span>
  {% endset %}

  {{ govukPanel({
    titleText: title,
    html: panelHtml
  }) }}

  <h2 class="govuk-heading-m govuk-!-margin-top-6">Next steps</h2>
  <p class="govuk-body">
    Add this appointment to your calendar.
  </p>
  <p class="govuk-body">
    Give details of the appointment to {{ offender.firstName }}.<br>
    {% if offender.phoneNumber %}
      <span data-qa="confirm-appointment/phone">{{ offender.firstName }}â€™s phone number is <strong>{{ offender.phoneNumber }}</strong>.</span>
    {% endif %}
  </p>
{% endblock %}
