{% from "govuk/components/summary-list/macro.njk"     import govukSummaryList %}

{# offender: OffenderExitViewModel #}
{% macro offenderExitSummary(offender) %}
    {{ govukSummaryList({
        attributes: { 'data-qa': 'offender/exit/offender-details' },
        rows: [
            {
                key: { text: 'Name' },
                value: { text: offender.displayName }
            },
            {
                key: { text: 'Date of birth' },
                value: { text: offender.dateOfBirth | dateFormat('dd/MM/yyyy') }
            } if offender.dateOfBirth,
            {
                key: { html: 'CRN' | abbr },
                value: { html: '<span class="app-!-font-family-tabular">' + offender.ids.crn + '</span>'}
            },
            {
                key: { html: 'PNC' | abbr },
                value: { html: '<span class="app-!-font-family-tabular">' + offender.ids.pnc + '</span>'}
            } if offender.ids.pnc
        ]
    }) }}
{% endmacro %}
