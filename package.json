{
  "name": "hmpps-manage-supervisions",
  "version": "0.0.1",
  "description": "HMPPS Manage Supervisions",
  "repository": "git@github.com:ministryofjustice/hmpps-manage-supervisions.git",
  "license": "MIT",
  "scripts": {
    "postinstall": "husky install",
    "copy-views": "cp -R server/views dist/server/",
    "compile-sass": "sass --no-source-map --load-path=node_modules/govuk-frontend --load-path=node_modules/@ministryofjustice/frontend ./assets/sass/application.sass:./assets/stylesheets/application.css ./assets/sass/application-ie8.sass:./assets/stylesheets/application-ie8.css --style compressed",
    "watch-views": "nodemon --watch server/views -e html,njk -x npm run copy-views",
    "watch-node": "DEBUG=gov-starter-server* nodemon --watch \"**\" --ext 'ts,json' --ignore \"**/*.test.ts\" --exec \"ts-node server.ts\" | bunyan -o short",
    "watch-sass": "npm run compile-sass -- --watch",
    "build": "npm run compile-sass && tsc && npm run copy-views",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"Views,Node,Sass\" -c \"yellow.bold,green.bold,blue.bold\" \"npm run watch-views\" \"npm run watch-node\" \"npm run watch-sass\"",
    "start-feature": "export $(cat feature.env) && node dist/server.js | bunyan -o short",
    "watch-node-feature": "export $(cat feature.env) && nodemon --watch \"**\" --ext 'ts,json' --ignore \"**/*.test.ts\" --exec \"ts-node server.ts\" | bunyan -o short",
    "start-feature:dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"Views,Node,Sass\" -c \"yellow.bold,green.bold,blue.bold\" \"npm run watch-views\" \"npm run watch-node-feature\" \"npm run watch-sass\"",
    "record-build-info": "node ./bin/record-build-info",
    "lint": "eslint . --cache --max-warnings 0",
    "typecheck": "tsc",
    "test": "jest",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open",
    "clean": "rm -rf dist build node_modules stylesheets"
  },
  "engines": {
    "node": "^14",
    "npm": "^6.4.1"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(spec|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "integration_tests/*"
    ],
    "delay": 2500,
    "ext": "js,json,html,njk"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@ministryofjustice/frontend": "^0.2.2",
    "agentkeepalive": "^4.1.4",
    "applicationinsights": "^1.8.10",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-redis": "^5.2.0",
    "csurf": "^1.11.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-request-id": "^1.4.1",
    "express-session": "^1.17.1",
    "glob": "^7.1.6",
    "govuk-frontend": "^3.11.0",
    "handy-redis": "^2.2.1",
    "helmet": "^4.5.0",
    "http-errors": "^1.8.0",
    "jquery": "^3.6.0",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.21",
    "luxon": "^1.26.0",
    "nocache": "^2.1.0",
    "nunjucks": "^3.2.3",
    "openid-client": "^4.7.2",
    "passport": "^0.4.1",
    "passport-oauth2": "^1.5.0",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "superagent": "^6.1.0",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.6",
    "@types/bunyan-format": "^0.2.3",
    "@types/compression": "^1.7.0",
    "@types/connect-flash": "0.0.36",
    "@types/connect-redis": "^0.0.16",
    "@types/cookie-session": "^2.0.42",
    "@types/csurf": "^1.11.0",
    "@types/express-request-id": "^1.4.1",
    "@types/express-session": "^1.17.3",
    "@types/faker": "^5.5.3",
    "@types/glob": "^7.1.3",
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/lodash": "^4.14.168",
    "@types/luxon": "^1.26.4",
    "@types/node": "^14.14.31",
    "@types/nunjucks": "^3.1.4",
    "@types/passport": "^1.0.6",
    "@types/passport-oauth2": "^1.4.10",
    "@types/redis": "^2.8.28",
    "@types/sinon": "^10.0.0",
    "@types/superagent": "^4.1.10",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "concurrently": "^6.0.0",
    "cypress": "^7.2.0",
    "cypress-multi-reporters": "^1.5.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "faker": "^5.5.3",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-html-reporter": "^3.3.0",
    "jest-junit": "^12.0.0",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^10.5.4",
    "mocha-junit-reporter": "^2.0.0",
    "nock": "^13.0.10",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "sass": "^1.32.8",
    "sinon": "^10.0.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
